<br><strong>SIGN UP</strong><br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :email %><br>
  <%= f.email_field :email %><br>

  <%= f.label :description %><br>
  <%= f.text_area :description, size: "35x5" %><br>
  <small>the following html tags are allowed:<br>
  strong em a code pre h2 h3 p blockquote ul ol li br</small><br>

  <%= f.label :private? %><br>
  <%= f.check_box :private, {}, true %><br>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <% if f.object.password_required? %>
    <%= f.label :password %> <br>
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em><br>
    <% end %>
  
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, autocomplete: "off" %><br>
  <% end %>
    <%= f.submit "sign up" %><br>

<% end %>

<%= render "devise/shared/links" %>
