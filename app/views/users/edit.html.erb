<%= form_for(@user, html: { multipart: true }) do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :email %>
	<%= f.email_field :email %>

	<%= f.label :description %>
	<%= f.text_field :description %>

	<%= f.label :private? %>
	<%= f.check_box :private, {}, true %>

	<%= f.submit %>

<% end %>