<%= form_for(@user, html: { multipart: true }) do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %><br>

	<%= f.label :email %>
	<%= f.email_field :email %><br>

	<%= f.label :description %>
	<%= f.text_area :description %><br>

	<%= f.label :private? %>
	<%= f.check_box :private, {}, true %><br>

	<%= f.submit 'save' %>

<% end %>